@page
@model Backend.Pages.Users.IndexModel
@{
    ViewData["Title"] = "列表";
}

<h2>列表</h2>

<p>
    <a asp-page="Create">新增</a>
</p>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    用户名
                </th>
                <th>
                    手机
                </th>
                <th>
                    邮箱
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Users)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">修改</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">详情</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">删除</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@{
    var prevDisabled = !Model.Users.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Users.HasNextPage ? "disabled" : "";
}

<a asp-page="./Index"
   asp-route-pageIndex="@(Model.Users.PageIndex - 1)"
   class="btn btn-default @prevDisabled">
    上一页
</a>
<a asp-page="./Index"
   asp-route-pageIndex="@(Model.Users.PageIndex + 1)"
   class="btn btn-default @nextDisabled">
    下一页
</a>
